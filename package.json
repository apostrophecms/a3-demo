{
  "name": "a3-demo",
  "version": "1.0.0-prealpha",
  "description": "Apostrophe 3 Demo Site",
  "main": "app.js",
  "scripts": {
    "build": "webpack && npm run apostrophe-build",
    "apostrophe-build": "node app @apostrophecms/asset:build",
    "start": "node app",
    "dev": "nodemon --delay 1000ms -x \"npm run build && nodemon app.js\"",
    "staging-deploy": "echo \"ℹ️  Clearing module links and installed modules to deploy.\" && rm package-lock.json && rm -r node_modules && npm i && sc-deploy staging",
    "analyze-bundle": "APOS_BUNDLE_ANALYZER=1 node app @apostrophecms/asset:build"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "dependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "apostrophe": "github:apostrophecms/apostrophe#3.0",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.0.1",
    "mini-css-extract-plugin": "^1.3.4",
    "sass": "^1.32.8",
    "sass-loader": "^10.1.1",
    "style-loader": "^2.0.0",
    "webpack": "^5.16.0",
    "webpack-cli": "^4.4.0"
  },
  "author": "Apostrophe Technologies, Inc",
  "license": "MIT",
  "nodemonConfig": {
    "verbose": true,
    "watch": [
      "./app.js",
      "./modules/**/*",
      "./lib/**/*.js",
      "./views/**/*.html",
      "./src/**/*",
      "./node_modules/apostrophe/modules/@apostrophecms/**/*"
    ],
    "ignoreRoot": [
      ".git"
    ],
    "ignore": [
      "lib/modules/*/public/js/*.js",
      "locales/*.json",
      "public/modules/**/*.less",
      "public/modules/**/*.js",
      "public/uploads",
      "public/apos-minified/*.js",
      "public/css/master-*.less",
      "modules/asset/ui/public/site.js",
      "data"
    ],
    "ext": "json, js, html, scss, vue"
  },
  "devDependencies": {
    "eslint": "^7.8.0",
    "eslint-config-apostrophe": "^3.4.0",
    "eslint-plugin-node": "^11.1.0",
    "nodemon": "^2.0.4"
  }
}
